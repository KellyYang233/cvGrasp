  author={Cai, Minjie and Kitani, Kris M and Sato, Yoichi},
  booktitle={Proceedings of IEEE International Conference on Robotics and Automation (ICRA)},
  pages={1360--1366},
  year={2015},
  organization={IEEE}
}
